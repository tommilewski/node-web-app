<%- include('partials/header') %>

<h1 class="text-center">Księga Gości</h1>

<div class="guestbook-form">
    <form action="/guestbook" method="POST">
        <input type="text" name="name" placeholder="Imię">
        <textarea name="message" placeholder="Wiadomość"></textarea>
        <button type="submit">Wyślij</button>
    </form>
</div>

<div class="guestbook-entries mt-5">
    <% if (entries.length === 0) { %>
        <p class="text-center">Brak wpisów w księdze gości. Dodaj swój komentarz!</p>
    <% } else { %>
        <% entries.forEach(entry => { %>
            <div class="guest-entry">
                <div class="card-body">
                    <h5 class="card-title"><%= entry.name %></h5>
                    <p class="card-text"><%= entry.message %></p>
                    <p class="card-date small"><%= entry.date %></p>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>

<%- include('partials/footer') %>